{
  "name": "human-adjacent-coordination",
  "version": "2.0.0",
  "description": "A lightweight Model Context Protocol server enabling seamless coordination between AI instances with a single source of truth for project and task management",
  "main": "src/server.js",
  "bin": {
    "mcp-proxy": "./mcp-proxy-client.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "start:server": "node start-server.js",
    "start:https": "node src/https-server.js",
    "start:sse": "node src/sse-server.js",
    "start:mcp": "node src/mcp-server.js",
    "start:proxy": "node mcp-proxy-client.js",
    "start:dev": "node --watch start-server.js",
    "start:https-dev": "node --watch src/https-server.js",
    "test:ssl": "node test-ssl-connection.js",
    "test:proxy": "node test-proxy-connection.js",
    "test:proxy-complete": "node complete-proxy-test.js",
    "validate:ssl": "node validate-ssl-fix.js",
    "validate:proxy": "node validate-proxy-integration.js",
    "setup:ssl": "scripts\\setup-ssl-windows.bat",
    "share:certs": "scripts\\share-certificates.bat",
    "test:cross-platform": "scripts\\test-cross-platform-ssl.bat",
    "dev": "node --watch src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "prepare": "node -e \"try { require('fs').mkdirSync('data'); } catch(e) {}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-coordination",
    "claude",
    "task-management",
    "project-management",
    "json-rpc"
  ],
  "author": "Human-Adjacent Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lupo/Human-Adjacent-Coordination.git"
  },
  "bugs": {
    "url": "https://github.com/lupo/Human-Adjacent-Coordination/issues"
  },
  "homepage": "https://github.com/lupo/Human-Adjacent-Coordination#readme"
}
